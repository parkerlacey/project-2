<section class="p-4 p--5 text-center text-lg-start shadow-1-strong rounded" style="
     background: rgb(48,48,45);
    background: linear-gradient(90deg, rgba(48,48,45,1) 1%, rgba(77,76,65,1) 14%, rgba(157,152,145,1) 74%);
    color: rgb(0, 0, 0);
  ">
  <div class="row d-flex justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <div class="card-body m-3">
          <div class="row">
            <div class="col-lg-4 d-flex justify-content-center align-items-center mb-4 mb-lg-0">
              <img src="https://png.pngitem.com/pimgs/s/30-307416_profile-icon-png-image-free-download-searchpng-employee.png"
                class=" img-fluid shadow-1" alt="avatar" width="200" height="200" />
            </div>
            <div class="col-lg-8">
              <p class="text-muted fw-light mb-4">
             <span><i class="fa fa-quote-left"></i></span>  {{content}}
              </p>
              <p class="fw-bold lead mb-2"><strong>{{title}}</strong></p>
              <p class="fw-bold text-muted mb-0">{{rating}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
